{
  "name": "jsonapi",
  "version": "1.0.0",
  "description": "An ExpressJS API implementing the JSON API specification",
  "main": "server.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timrourke/jsonapi.git"
  },
  "author": {
    "name": "Tim Rourke",
    "email": "tim@timrourke.com",
    "url": "https://timrourke.com"
  },
  "scripts": {
    "start": "NODE_ENV=production node_modules/.bin/sequelize db:migrate --config ./src/config/database.json --migrations-path ./src/db/migrations && NODE_ENV=production node ./src/server.js",
    "test": "NODE_ENV=test node_modules/.bin/nyc node_modules/.bin/mocha $(find src/test -name '*.test.js') --reporter mocha-junit-reporter --reporter spec",
    "testnonyc": "NODE_ENV=test node_modules/.bin/mocha ./src"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "express": "^4.15.2",
    "helmet": "^3.5.0",
    "inflection": "^1.12.0",
    "method-override": "^2.3.8",
    "mysql": "^2.13.0",
    "parseurl": "^1.3.1",
    "sequelize": "^3.30.3",
    "sequelize-cli": "^2.7.0",
    "sinon": "^2.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.0",
    "faker": "^4.1.0",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.13.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^10.2.0",
    "rosie": "^1.6.0"
  }
